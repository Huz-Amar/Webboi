<%- contentFor('css') %>
<link rel="stylesheet" href="//cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css">

<%- contentFor('scripts') %>
<script src="//cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js" charset="utf-8"></script>
<script>
	$(document).ready( function () {
		$('#ptContains').DataTable();
	} );
</script>

<%- contentFor('hero') %>
<section class="hero">
	<div class="hero-content">
		<h2><span>Prescription Tickets</span></h2>
		<p> <span>Search by ticket number</span></p>
	</div>
</section>

<main>
	<div align="center">
		<a href="/prescription_tickets" class="btn btn-lg btn-primary">Go back</a>
	</div>

	<div style="padding-top: 40px">
		<table id="ptContains" class="table table-striped table-border">
			<thead>
				<tr>
					<th>Ticket Number</th>
					<th>Prescription ID</th>
					<th>Amount</th>
				</tr>
			</thead>
			<tbody>
				<% content.forEach(function (tc) { %>
				<tr>
					<td>
						<%= tc.Ticket_Num %>
					</td>
					<td>
						<%= tc.P_ID %>
					</td>
					<td>
						<%= tc.Amount %>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>

</main>