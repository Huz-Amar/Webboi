<%- contentFor('css') %>
<link rel="stylesheet" href="//cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css">

<%- contentFor('scripts') %>
<script src="//cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js" charset="utf-8"></script>
<script>
	$(document).ready( function () {
		$('#employeeTable').DataTable();
	} );
</script>

<%- contentFor('hero') %>
<section class="hero">
	<div class="hero-content">
		<h2><span>Employees</span></h2>
		<p> <span>Staff review</span></p>
	<!--
        <a href="/inventory" class="btn btn-lg btn-primary">Check Stock</a>
		<a href="/customer_history" class="btn btn-lg btn-primary">See History</a>
	-->
</div>
</section>

<main>
	<div style="padding-top: 40px">
		<table id="employeeTable" class="table table-striped table-border">
			<thead>
				<tr>
					<th>Employee ID</th>
					<th>Name</th>
					<th>Access Level</th>
					<th>Supervisor ID</th>
				</tr>
			</thead>
			<tbody>
				<% employees.forEach(function (emp) { %>
				<tr>
					<td>
						<%= emp.employeeID %>
					</td>
					<td>
						<%= emp.name %>
					</td>
					<td>
						<%= emp.access_level %>
					</td>
					<td>
						<%= emp.superID %>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>

</main>