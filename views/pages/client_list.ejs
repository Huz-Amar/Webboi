<%- contentFor('css') %>
<link rel="stylesheet" href="//cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css">

<%- contentFor('scripts') %>
<script src="//cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js" charset="utf-8"></script>
<script>
	$(document).ready( function () {
		$('#clientTable').DataTable();
	} );
</script>

<%- contentFor('hero') %>
<section class="hero">
	<div class="hero-content">
		<h2><span>Clients</span></h2>
		<p> <span>Registered clients only</span></p>
	<!--
        <a href="/inventory" class="btn btn-lg btn-primary">Check Stock</a>
		<a href="/customer_history" class="btn btn-lg btn-primary">See History</a>
	-->
</div>
</section>

<main>
	<div style="padding-top: 40px">
		<table id="clientTable" class="table table-striped table-border">
			<thead>
				<tr>
					<th>Client ID</th>
					<th>Name</th>
					<th>Age</th>
					<th>Weight</th>
					<th>Address</th>
					<th>Phone</th>
				</tr>
			</thead>
			<tbody>
				<% clients.forEach(function (c) { %>
				<tr>
					<td>
						<%= c.clientID %>
					</td>
					<td>
						<%= c.name %>
					</td>
					<td>
						<%= c.age %>
					</td>
					<td>
						<%= c.weight %>
					</td>
					<td>
						<%= c.address %>
					</td>
					<td>
						<%= c.phone %>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>

</main>